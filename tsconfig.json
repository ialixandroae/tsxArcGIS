{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "types": [
            "arcgis-js-api",
            "dojo",
            "react",
            "react-dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "React.createElement"
        
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}